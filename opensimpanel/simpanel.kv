#:kivy 1.10.1

#:import AltitudeWidget opensimpanel.gauges.altitude
#:import GenericWidget opensimpanel.gauges.generic
#:import CompassWidget opensimpanel.gauges.compass

<VerticalSpeed@GenericWidget>:
    file_gauge: 'gauges/assets/verticalspeed.png'
    units_per_revolution: 4200
    start_angle: 270
    value: 0

<AirSpeed@GenericWidget>:
    units_per_revolutions: 250

<SimPanel>:
    SimScaleBox:

        AirSpeed:
            pos: 0, 400

        AltitudeWidget:
            data_ref: 'sim/cockpit2/gauges/indicators/altitude_ft_pilot'
            pos: 800, 400

        CompassWidget:
            data_ref: 'sim/cockpit2/gauges/indicators/heading_vacuum_deg_mag_pilot'
            pos: 400, 0

        VerticalSpeed:
            data_ref: 'sim/flightmodel/position/vh_ind_fpm'
            pos: 800, 0


